function security_warning($type)
{
  $str = "***Dados do servidor*** \n" . 
         "Nome: " . $_SERVER["SERVER_NAME"] . "\n" . 
         "Endereço: " . $_SERVER["SERVER_ADDR"] . "\n" . 
         "URL: " . $_SERVER["REQUEST_URI"] . "\n\n" . 

         "***Dados do usuário*** \n" . 
         "Endereço: " . $_SERVER["SERVER_NAME"] . "\n" . 
         "Usuário: " . $_SESSION["jaguar_username"] . "\n" . 
         "Nome: " . $_SESSION["s_dt_ultimo_login"] . "\n" ;

  switch ($type)
  {
    case 1: $subject = "Possível tentativa de Injection"; break;
    case 2: $subject = "Ponto-e-virgula passado em um parâmetro"; break;
  }

  mail("jaguar@atua.com.br", $subject, $str);
}

